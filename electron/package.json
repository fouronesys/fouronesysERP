{
  "name": "four-one-solutions-desktop",
  "version": "1.0.0",
  "description": "Four One Solutions - Sistema de Gesti√≥n Empresarial para Windows",
  "main": "main.js",
  "author": "Four One Solutions",
  "license": "MIT",
  "homepage": "https://four-one-solutions.replit.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/four-one-solutions/business-management"
  },
  "build": {
    "appId": "com.fourone.business-management",
    "productName": "Four One Solutions",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "sqlite-adapter.js",
      "sync-service.js",
      "icon.ico",
      "icon.png"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Four One Solutions",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Four One Solutions",
      "include": "installer.nsh",
      "license": "license.txt"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "icon.png",
      "category": "Office"
    },
    "extraResources": [
      {
        "from": "../client/dist",
        "to": "app",
        "filter": ["**/*"]
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "electron-updater": "^6.1.4",
    "electron-log": "^5.0.1"
  }
}